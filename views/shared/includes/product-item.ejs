<article class="product-item">
    <img  src="<%= product.imageUrl %>" alt="<%= product.title %>">
    <div class="product-item-content">
        <h2 class="products-title"><%= product.title %> </h2>
        <div class="products-edit">
            <% if (locals.isAdmin) { %> 
            <a class="btn" href="/admin/products/<%= product.id %>">View & Edit</a>
            <button  class="btn" data-productid="<%= product.id %>" data-csrf="<%= locals.csrfToken %>">Delete</button>

            <% } else { %>
                <a  class="btn btn-alt" href="/products/<%= product.id %>">
                View Details</a>
                <% } %>
        </div>
    </div>
  
</article>