<%- include('../../shared/includes/head', { pageTitle: 'Signup'}) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">

</head>
<body>
<%- include('../../shared/includes/header') %>
<main>
<section class="signup-section">
    <div class="signup-image">
        <img src="/images/illustration.png" alt="email illustration">
    </div>
  <div class="signup-form">
    <h1>Sign in</h1>

    <form action="/signin" method="POST">
      <input type="hidden" value="<%= locals.csrfToken %>" name="_csrf">
       <p>
        <input type="email" id="email" name="email" placeholder="Email"  class="form-specifics" required>
       </p>
       <p>
        <input type="password" id="password" name="password" placeholder="Password"  minlength="6"  class="form-specifics" required>
       </p>
       <p>
        <button class="btn-signup">  Sign in</button>
       </p>
       <p id="switch-form">Don't have an account?<a href="/signup">  Sign up</a></p>
    </form>
  </div>

</section>
   
</main>

<%- include('../../shared/includes/footer') %>